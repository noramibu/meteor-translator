{
  "schemaVersion": 1,
  "id": "meteor-translator",
  "version": "${version}",
  "name": "Meteor Translator",
  "description": "An addon to translate chat and sign texts.",
  "authors": [
    "noramibu"
  ],
  "contact": {
    "sources": "https://github.com/noramibu/meteor-translator"
  },
  "icon": "assets/template/icon.png",
  "environment": "client",
  "entrypoints": {
    "meteor": [
      "me.noramibu.translator.MeteorTranslator"
    ]
  },
  "mixins": [
    "meteor-translator.mixins.json"
  ],
  "custom": {
    "meteor-client:color": "225,25,25",
    "modmenu": {
      "parent": {
        "id": "meteor-client"
      }
    }
  },
  "depends": {
    "java": ">=21",
    "minecraft": ["${mc_version}"],
    "meteor-client": "*"
  }
}
